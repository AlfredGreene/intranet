%h2
  Vendors
.form-horizontal
  %table.table.table-hover
    %thead
      %tr
        %th Name
        %th Category
        %th Address
    %tbody
      - @vendors.each do |v|
        %tr
          %td= v.company
          %td= v.category
          - address = "#{v.address.try(:address)}"
          %td= address
          - v.contact_persons.each do |c|
            %td= c.name
            %td= c.phone_no
            %td= c.email
          %td
            =link_to '', edit_vendor_path(v), class: "icon-edit", data: {'no-turbolink' =>  true} 
            =link_to '', vendor_path(v), method: :delete, "data-confirm" => "Are you sure?", class: "icon-trash"
:css
  .contact {border-top: 1px white;}
