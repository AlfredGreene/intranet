= simple_nested_form_for(@vendor, html: { class: "form-horizontal", multipart: true}) do |f|
  %h3
    = title
  = f.input :company, required: false
  = f.input :category, required: false
  %h4 Contact Persons
  = f.simple_fields_for :contact_persons do |c|
    = c.input :name
    = c.input :phone_no
    = c.input :email 
  = f.link_to_add 'Add Contact Person', :contact_persons
  %h4 Address
  = f.simple_fields_for :address do |a|
    = a.input :address, as: :text
    = a.input :city
    = a.input :pin_code
    = a.input :state
    = a.input :landline_no, label: 'Landline/Mobile No' 
  = f.submit 'Save', class: "btn controls"
