%h1 Editing user

= simple_form_for @user do |f|
  = f.error_notification
  .form-inputs
  = f.input :email
  = f.input :name
  = f.input :local_address
  = f.input :permanent_address
  = f.input :pan_number
  = f.input :github_handle
  = f.input :twitter_handle
  = f.input :phone_number
  = f.input :dateOfBirth
  = f.input :join_date
  = f.input :employee_id
  = f.input :passport_number
  = f.button :submit


= link_to 'Show', @user
