.form-horizontal
  %table.table.table-hover
    %thead
      %tr
        %th Summary
        %th Event Start
        //%th Event End
        %th Status
        %th
        %th
    %tbody
      - @events.items.each_with_index do |event, index|
        - if event["start"]["dateTime"] < Date.today
          %tr
            %td= link_to event["summary"], schedule_path(event["id"])
            %td= event["start"]["dateTime"]
            //%td= event["end"]["dateTime"]
            %td
              - if can? :edit, Schedule
                = link_to "", edit_schedule_path(event["id"]), class: "icon-edit"
              - if can? :delete, Schedule           
                = link_to schedule_path(event["id"]), html_options= {method: :delete} do
                  %i.icon-remove
  = link_to "Create Event", new_schedule_path
:css
  .table td{ vertical-align: middle; }