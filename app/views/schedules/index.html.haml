= form_tag schedules_path, :method => 'get' do
  = text_field_tag :starts_at, params[:search]
  = submit_tag "Search", :name => nil

= form_tag schedules_path, :method => 'get' do
  = hidden_field_tag :starts_at, Date.today.strftime("%m/%d/%Y")
  = submit_tag "Today", :name => nil

:javascript
  $(function() {
    $( "#starts_at" ).datepicker();
  })

.form-heading
  %h2 Events
%div.tabbable
  %ul.nav.nav-tabs
    %li.active.all-tab
      %a{data: {toggle: 'tab'}, href: "#all"} 
        All
    %li.today-tab
      %a{data: {toggle: "tab"}, href: "#today" } 
        Today
    %li.past-tab
      %a{data: {toggle: "tab"}, href: "#past"}
        Past
    %li.future-tab
      %a{data: {toggle: "tab"}, href: "#future"}
        Future

  .tab-content
    .tab-pane.active#all
      = render "schedules/index"
    .tab-pane#today
      = render "schedules/today"
    .tab-pane#past
      = render "schedules/past"
    .tab-pane#future
      = render "schedules/future"


