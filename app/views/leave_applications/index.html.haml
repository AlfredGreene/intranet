%table.table.table-hover.table-striped
  %thead
    %tr
      %th
        Name
      %th
        Sick Leave
      %th
        Casual Leave
      %th
        Current Year Leave
      %th
        Total Leave
  %tbody
    - @all_available_leave.each do|leave_detail|
      %tr
        %td
          = leave_detail.user.name
        %td
          = link_to leave_detail.available_leave["Sick"], '#', {class: 'leave_type_sick', id: "sick_#{leave_detail.id}", data:{pk: leave_detail.id.to_s, url: update_available_leave_path(id: leave_detail.id, type: 'Sick'), name: 'Sick'}}
        %td
          = link_to leave_detail.available_leave["Casual"], '#', {class: 'leave_type_casual', id: "casual_#{leave_detail.id}", data:{pk: leave_detail.id.to_s, url: update_available_leave_path(id: leave_detail.id, type: 'Casual'), name: 'Casual'}}
        %td
          = link_to leave_detail.available_leave["CurrentPaid"],  "#", {class: 'leave_type_current', id: "current_paid_#{leave_detail.id}", data:{pk: leave_detail.id.to_s, url: update_available_leave_path(id: leave_detail.id, type: 'CurrentPaid'), name: 'CurrentPaid'}}
        %td
          = link_to leave_detail.available_leave["TotalPaid"],  "#", {class: 'leave_type_paid', id: "paid_#{leave_detail.id}", data:{pk: leave_detail.id.to_s, url: update_available_leave_path(id: leave_detail.id, type: 'TotalPaid'), name: 'TotalPaid'}}
