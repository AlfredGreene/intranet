%table.table.table-hover
  %thead
    %th From
    %th Start Date
    %th Last Date
    %th Days
    %th Reason
    %th Applied On
    %th Status
    - if (leave_data.present? and !leave_data.first.pending?) or can? :manage, LeaveApplication
      %th Reason for rejecting
    - if (leave_data.present? and leave_data.first.pending?) or can? :manage, LeaveApplication
      %th Action
  %tbody
    - leave_data.each do|appr_leave|
      - pending_leave = appr_leave.pending?
      %tr{id: "leave_application_#{appr_leave.id}", pending: "#{pending_leave}"}
        %td= appr_leave.user.try(:name)
        %td= appr_leave.start_at.strftime("%d-%m-%Y")
        %td= appr_leave.end_at.strftime("%d-%m-%Y")
        %td= appr_leave.number_of_days
        %td= appr_leave.reason
        %td= appr_leave.created_at.try(:strftime, "%d-%m-%Y")
        %td.status= appr_leave.leave_status
        %td 
          .prev_reason #{appr_leave.reject_reason + ';' if appr_leave.reject_reason.present?}
          %br
          %a.reason{data:{id: appr_leave.id.to_s, url: 'cancel_leave_application', action: 'cancel', value: '', type: :textarea}, class: "reason_#{appr_leave.id}"}
        %td.spinner.hide= image_tag('select2-spinner.gif', :class => 'spinner')
        %td.action
          - if pending_leave and can? :edit, appr_leave
            .btn.btn-mini= link_to 'Edit', edit_leave_application_path(appr_leave)
            - if can? :manage, appr_leave
              %div{ class: 'btn btn-success btn-mini approve_leave', data:{id: appr_leave.id.to_s, url: 'approve_leave_application', action: 'approve' }}
                Approve
              %div{class: 'btn btn-danger btn-mini cancel_leave', div_id: "#{appr_leave.id}"}
                Reject
          - elsif !pending_leave and (can? :manage, appr_leave)
            - if appr_leave.leave_status == REJECTED
              %div{ class: 'btn btn-success btn-mini approve_leave', data:{id: appr_leave.id.to_s, url: 'approve_leave_application', action: 'approve' }} Approve
            - if appr_leave.leave_status == APPROVED
              %div{class: 'btn btn-danger btn-mini cancel_leave', div_id: "#{appr_leave.id}"} Reject
