= simple_form_for(@leave_type) do |f|
  = f.error_notification

  .form-inputs

    = f.input :name

    = f.input :max_no_of_leaves

    = check_box_tag( :id  => "chkNumber", :onclick  => "coffeescrift:toggleField(:number_of_leaves)")

    = hidden_field_tag :number_of_leaves


  .form-actions
    = f.button :submit, class: 'btn-success'
