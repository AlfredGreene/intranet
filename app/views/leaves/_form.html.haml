= simple_form_for @leave, html: {:class => 'form-horizontal'} do |f|
 = f.error_notification
 = f.association :leave_type, :collection => current_organization.leave_types.all.entries, :prompt => "Select leave type"
 = f.input :reason
 =f.input :starts_at, :label => 'Select start date', :input_html => {:class => "datepicker"}
 = f.input :ends_at, :label => 'Select end date', :input_html => {:class => "datepicker"}
 = f.input :number_of_days
 = f.input :contact_address, :as => :text, :input_html => {:value => "#{@profile.local_address}"}
 = f.input :contact_number, :input_html => {:value => "#{@profile.phone_number}"}
 = f.submit "Apply"

